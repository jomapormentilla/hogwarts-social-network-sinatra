<div class="row">
    <div class="col-md-7"></div>
    <div class="col-md-5 p-sm-2 p-md-4 text-center">
        <img src="/images/hogwarts-logo-300x300.png" alt="hogwarts-logo" />
        <% if flash.has?(:message) %>
            <div class="alert alert-<%= flash[:alert_type] %> text-center"><%= flash[:message] %></div>
        <% end %>
        <form action="/signup" method="POST" class="py-2">
            <input type="text" name="wizard[username]" placeholder="Username" class="form-control" /><br />

            <div class="input-group">
                <input type="text" name="fname" placeholder="First Name" class="form-control" /><br />
                <input type="text" name="lname" placeholder="Last Name" class="form-control input-group-append" />
            </div><br />

            <input type="email" name="wizard[email]" placeholder="Email" class="form-control" /><br />

            <div class="input-group">
                <input type="password" name="wizard[password]" placeholder="Password" class="form-control" /><br />
                <input type="password" name="confirm" placeholder="Confirm Password" class="form-control input-group-append" />
            </div><br />

            <button type="submit" class="btn btn-info btn-block">Sign Up</button>
        </form>
        <br />
        <p style="color: #fff;">Already a wizard? <a href="/login">Login Here</a></p>
    </div>
</div>