<div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4 p-sm-2 p-md-4 text-center">
        <% if flash.has?(:message) %>
            <div class="alert alert-<%= flash[:alert_type] %> text-center"><%= flash[:message] %></div>
        <% end %>
        <form action="/" method="POST">
            <input type="text" name="username" placeholder="Username" class="form-control" /><br />
            <input type="password" name="password" placeholder="Password" class="form-control" /><br />
            <button type="submit" class="btn btn-outline-secondary btn-block">Login</button>
        </form>
        <br />
        <p style="color: #fff;">Need an account? <a href="/signup">Signup Here</a></p>
    </div>
</div>