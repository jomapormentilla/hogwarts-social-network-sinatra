<h1>Edit Post</h1>

<div class="row">
    <div class="col-md-3"></div>

    <div class="col-md-6">
        <form action="/posts/<%= @post.id %>" method="POST">
            <label>Title</label>
            <input type="text" name="post[title]" value="<%= @post.title %>" class="form-control" /><br />

            <label>Content</label>
            <textarea name="post[content]" class="form-control"><%= @post.content %></textarea><br />

            <input type="hidden" name="_method" value="PATCH" />
            <button type="submit" class="btn btn-block btn-outline-warning btn-sm">Edit Post</button>
        </form>
    </div>

    <div class="col-md-3"></div>
</div>