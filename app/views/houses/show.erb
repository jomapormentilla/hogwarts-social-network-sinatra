<h1><%= @house.name %></h1>

<% @house.posts.each do |post| %>
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"><%= post.title %></h3>
            <h6 class="card-subtitle"> By: <a href="/wizards/<%= post.wizard.slug %>"><%= post.wizard.username %></a></h6>
            <br />
            <p class="card-text"><%= post.content %></p>
            <a href="/posts/<%= post.id %>"><%= post.comments.size %> Comment<%= 's' if post.comments.size != 1 %></a>
        </div>
    </div>
    <br />
<% end %>