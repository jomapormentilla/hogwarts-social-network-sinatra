<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <% if flash.has?(:message) %>
            <div class="alert alert-<%= flash[:alert_type] %> text-center"><%= flash[:message] %></div>
        <% end %>
        <div class="alert alert-dark text-center">
            <h2>Welcome to Hogwarts</h2>
            <span>School of Witchcraft & Wizardry</span>
        </div>
    </div>
    <div class="col-md-1"></div>

    <div class="col-md-1"></div>
    <div class="col-md-3">
        <div class="row">
            <% @houses.each do |house| %>
                <div class="col-sm-6 col-md-12">
                    <div class="card">
                        <div class="card-header"><h2><a href="/houses/<%= house.slug %>"><%= house.name %></a></h2></div>
                        <div class="card-body">
                            <p> Founder: <a href="/wizards/<%= house.founder.slug %>"><%= house.founder.name %></a><br />
                                Head Master: <a href="/wizards/<%= house.head_master.slug %>"><%= house.head_master.name %></a><br />
                            </p>
                            <p>House <%= house.name %> currently has <%= house.wizards.size %> wizards.</p>
                        </div>
                    </div><br />
                </div>
            <% end %>
        </div>
    </div>
    <div class="col-md-7">
        <div class="card bg-light shadow">
            <div class="card-header"><h3>Recent Posts</h3></div>
            <div class="card-body">
                <% @posts.each do |post| %>
                    <div class="media">
                        <a href="/wizards/<%= post.wizard.slug %>"><img src="<%= post.wizard.img_url == nil ? '/images/hogwarts-logo-300x300.png' : post.wizard.img_url %>" alt="profile" style="width: 64px;" class="align-self-start mr-3 py-1" /></a>
                        <div class="media-body">
                            <h4 class="mt-0"><%= post.title %></h4>
                            <p>By: <a href="/wizards/<%= post.wizard.slug %>"><%= post.wizard.username %></a><br />
                                <span style="color: #777;"><%= parse_timestamp post.timestamp %></span></p>
                            <p class="mt-0"><%= post.content %></p>
                            <form action="/posts/<%= post.id %>/upvote" method="POST">
                                <button type="submit" class="btn btn-outline-info btn-sm" <%= 'disabled' if post.upvotes.any?{|up| up.wizard_id == session[:wizard_id] } %>><%= post.upvotes.size %> Upvote<%= 's' if post.upvotes.size != 1 %></button> &nbsp; 
                                <a href="/posts/<%= post.id %>" class="btn btn-outline-primary btn-sm"><%= post.comments.size %> Comment<%= 's' if post.comments.size != 1 %></a>
                            </form>
                        </div>
                    </div><hr />
                <% end %>
            </div>
        </div><br />
    </div>
</div>